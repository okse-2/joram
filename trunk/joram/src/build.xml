<?xml version="1.0"?>

<project default="ship.joram" basedir=".">

  <!-- JORAM shipment target -->
  <target name="ship.joram"
          description="builds and ships Joram">
    <ant dir="." antfile="joram.xml" target="ship.joram"/>
  </target>

  <!-- kJORAM shipment target -->
  <target name="ship.kjoram"
          description="builds and ships kJoram">
    <ant dir="." antfile="kjoram.xml" target="ship.kjoram"/>
  </target>

  <!-- JORAM and kJORAM cleaning target -->
  <target name="clean"
          description="cleans Joram and kJoram shipments">
    <ant dir="." antfile="joram.xml" target="clean"/>
    <ant dir="." antfile="kjoram.xml" target="clean"/>
  </target>
</project>
