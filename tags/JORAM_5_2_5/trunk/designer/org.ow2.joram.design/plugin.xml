<plugin>

   <extension point="org.eclipse.emf.ecore.generated_package">
      <package
            uri="http:///joram.ow2.org/ecore/joram"
            class="org.ow2.joram.design.model.joram.JoramPackage"
            genModel="model/joram.genmodel"/>
   </extension>
   
   <extension
         point="org.eclipse.emf.ecore.extension_parser">
      <parser
            class="org.ow2.joram.design.model.parser.JORAMXMLResourceFactoryImpl"
            type="joram">
      </parser>
   </extension>
   
      <extension
         point="org.eclipse.ui.popupMenus">
      <objectContribution
            id="org.ow2.joram.design.diagram.export"
            nameFilter="*.joram"
            objectClass="org.eclipse.core.resources.IFile">
         <action
               class="org.ow2.joram.design.model.export.ExportAction"
               enablesFor="1"
               id="org.ow2.joram.design.model.export.ExportAction"
               label="Generate a3servers.xml"
               menubarPath="org.ow2.joram.design.model.export.menu1">
         </action>
      </objectContribution>
   </extension>

</plugin>
