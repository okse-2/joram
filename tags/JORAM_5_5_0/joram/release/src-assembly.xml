<?xml version="1.0" encoding="UTF-8"?>
<assembly>
  <id>src</id>
  <includeBaseDirectory>false</includeBaseDirectory>

  <formats>
    <format>zip</format>
<!--    <format>tar.gz</format>-->
  </formats>
      
   <!-- /joram-${version} -->
   <fileSets>
    <fileSet>
      <directory>..</directory>
      <outputDirectory>/joram-${version}</outputDirectory>
      <includes>
        <include>a3/**</include>
        <include>assembly/**</include>
        <include>conf/**</include>
        <include>jndi/**</include>
        <include>joram/**</include>
        <include>licenses/**</include>
        <include>samples/pom.xml</include>
        <include>samples/bin/**</include>
        <include>samples/config/**</include>
        <include>samples/src/**</include>
        <include>pom.xml</include>
        <include>history</include>
        <include>*.dox</include>
      </includes>
      <excludes>
        <exclude>**/*.class</exclude>
        <exclude>**/target/**</exclude>
        <exclude>**/.svn/**</exclude>
      </excludes>
    </fileSet>
  </fileSets>
</assembly>
