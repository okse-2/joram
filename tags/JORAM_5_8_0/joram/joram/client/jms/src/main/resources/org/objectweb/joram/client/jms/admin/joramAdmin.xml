    </Queue>
    <Queue name="queue1"
           serverId="1"
           className="org.objectweb.joram.mom.dest.ClusterQueue">
      <freeReader/>
      <freeWriter/>
        <property name="period" value="10000"/>
        <property name="producThreshold" value="50"/>
        <property name="consumThreshold" value="2"/>
        <property name="autoEvalThreshold" value="false"/>
        <property name="waitAfterClusterReq" value="1000"/>
      <jndi name="queue1"/>
    </Queue>
    <Queue name="queue2"
           serverId="2"
           className="org.objectweb.joram.mom.dest.ClusterQueue">
      <freeReader/>
      <freeWriter/>
        <property name="period" value="10000"/>
        <property name="producThreshold" value="50"/>
        <property name="consumThreshold" value="2"/>
        <property name="autoEvalThreshold" value="false"/>
        <property name="waitAfterClusterReq" value="1000"/>
      <jndi name="queue2"/>
    </Queue>
    <freeReader/>
    <freeWriter/>
    <reader user="user0"/>
    <writer user="user0"/>
    <reader user="user1"/>
    <writer user="user1"/>
    <reader user="user2"/>
    <writer user="user2"/>
