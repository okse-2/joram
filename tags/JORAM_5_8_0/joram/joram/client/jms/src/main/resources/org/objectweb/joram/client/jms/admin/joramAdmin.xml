<?xml version="1.0"?>
  
<JoramAdmin>
  <AdminModule>
    <connect hostName="localhost"
             port="16010"
             name="root"
             password="root"/>
  </AdminModule>
  
  <ConnectionFactory className="org.objectweb.joram.client.jms.tcp.QueueTcpConnectionFactory">
    <tcp host="localhost"
         port="16010"/>
    <jndi name="qcf0"/>
  </ConnectionFactory>
  
  <ConnectionFactory className="org.objectweb.joram.client.jms.tcp.QueueTcpConnectionFactory">
