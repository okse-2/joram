    <copy file="${build.dir}/joram-connector.jar" todir="${ship.dir}/lib"/>
    <copy file="${build.dir}/joram-config.jar" todir="${ship.dir}/lib"/>
    <copy file="${build.dir}/joram-raconfig.jar" todir="${ship.dir}/lib"/>
