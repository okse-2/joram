  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-assembly-plugin</artifactId>
        <executions>
                  
          <!-- ============= src =====================-->
          <execution>
            <id>joram-src</id>
            <phase>install</phase>
            <goals>
              <goal>single</goal>
            </goals>
            <configuration>
              <descriptors>
                <descriptor>src-assembly.xml</descriptor>
              </descriptors>
              <ignoreDirFormatExtensions>false</ignoreDirFormatExtensions>
            </configuration>
          </execution>
          
          <!-- ============= bin =====================-->
          <execution>
            <id>joram-bin</id>
            <phase>install</phase>
            <goals>
              <goal>single</goal>
            </goals>
            <configuration>
              <descriptors>
                <descriptor>samples-assembly.xml</descriptor>
              </descriptors>
              <appendAssemblyId>false</appendAssemblyId>
              <ignoreDirFormatExtensions>false</ignoreDirFormatExtensions>
            </configuration>
          </execution>
          
          <!-- ============= raconfig =====================-->
          <execution>
            <id>joram-raconfig</id>
            <phase>install</phase>
            <goals>
            	<goal>single</goal>
            </goals>
            <configuration>
              <descriptors>
                <descriptor>raconfig-assembly.xml</descriptor>
              </descriptors>
              <ignoreDirFormatExtensions>false</ignoreDirFormatExtensions>
            </configuration>
          </execution>
        </executions>
      </plugin>
      
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-dependency-plugin</artifactId>
        <executions>
          <execution>
            <id>copy</id>
            <phase>package</phase>
            <goals>
              <goal>copy</goal>
            </goals>
            <configuration>
              <artifactItems>
                <artifactItem>
                  <groupId>org.objectweb.joram</groupId>
                  <artifactId>joram-jca-remote</artifactId>
                  <version>${project.version}</version>
                  <type>rar</type>
                </artifactItem>
                <artifactItem>
                  <groupId>org.objectweb.joram</groupId>
                  <artifactId>joram-jca-ra</artifactId>
                  <version>${project.version}</version>
                  <type>rar</type>
                </artifactItem>
                <artifactItem>
                  <groupId>org.objectweb.joram</groupId>
                  <artifactId>joram-jca-jonas</artifactId>
                  <version>${project.version}</version>
                  <type>rar</type>
                </artifactItem>
              </artifactItems>
              <outputDirectory>${project.build.directory}</outputDirectory>
              <overWriteReleases>false</overWriteReleases>
              <overWriteSnapshots>true</overWriteSnapshots>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>

