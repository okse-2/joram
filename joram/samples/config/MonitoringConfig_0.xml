<?xml version="1.0" encoding="UTF-8"?>

<MonitoringTimerTasks>
	<Task>
		<type type = "fr.dyade.aaa.common.monitoring.FileMonitoringTimerTask" />
		<period period = "10000" />
		<resultPath path = "monitoringStats01.csv" />
		<taskProps objectName = "name" attribute="Monitoring#0.1" />
		<attsProps objectName = "AgentServer:server=AgentServer#0,cons=Transaction"
							 attribute  = "Persistent" />
		<attsProps objectName = "MonitoringService:cons=Monitoring#0.1"
							 attribute  = "Period" />
		<attsProps objectName = "Joram#0:type=Destination,name=queue"
							 attribute  = "NbMsgsReceiveSinceCreation,
														 PendingMessageCount" />
		<attsProps objectName = "Joram#0:type=Destination,name=queue"
							 attribute  = "NbMsgsDeliverSinceCreation,
 						 							   NbMsgsSentToDMQSinceCreation" />
		<attsProps objectName = "Joram#0:type=Destination,name=topic"
							 attribute  = "NbMsgsDeliverSinceCreation,
 														 NbMsgsReceiveSinceCreation,
														 NbMsgsSentToDMQSinceCreation" />
	</Task>
	<Task>
		<type type="fr.dyade.aaa.common.monitoring.WindowMonitoringTimerTask" />
		<period period="30000" />
		<resultPath path="monitoringStats02.csv" />
		<taskProps objectName="name" attribute="Monitoring#0.2" />

		<attsProps objectName="AgentServer:server=AgentServer#0,cons=Transaction"
			attribute="Persistent" />
		<attsProps objectName="MonitoringService:cons=Monitoring#0.2"
			attribute="Period" />
		<attsProps objectName="Joram#0:type=Destination,name=queue"
			attribute="NbMsgsReceiveSinceCreation,
						PendingMessageCount" />
		<attsProps objectName="Joram#0:type=Destination,name=queue"
			attribute="NbMsgsDeliverSinceCreation,
 						NbMsgsSentToDMQSinceCreation" />
		<attsProps objectName="Joram#0:type=Destination,name=topic"
			attribute="NbMsgsDeliverSinceCreation,
 						NbMsgsReceiveSinceCreation,
						NbMsgsSentToDMQSinceCreation" />
	</Task>

</MonitoringTimerTasks>


